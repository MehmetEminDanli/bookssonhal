@model books.Models.AdminViewModels.TurlerVM

@{
  Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-header">
  <div class="container-fluid">
    <div class="row mb-2">
      <div class="col-sm-6">
        <h1 class="m-0">Tür Düzenle</h1>
      </div>
      <!-- /.col -->
      <div class="col-sm-6">
        <ol class="breadcrumb float-sm-right">
          <li class="breadcrumb-item"><a href="/Admin">Anasayfa</a></li>
          <li class="breadcrumb-item"><a href="/Admin/Turler">Türler</a></li>
          <li class="breadcrumb-item active">Tür Düzenle</li>
        </ol>
      </div>
      <!-- /.col -->
    </div>
    <!-- /.row -->
  </div>
  <!-- /.container-fluid -->
</div>
<!-- /.content-header -->
<!-- Main content -->
<div class="content">
  <div class="container-fluid">
    <div class="row">
      <!-- /.col-md-6 -->
      <div class="col-lg-6">
        <div class="card card-info">
          <!-- /.card-header -->
          <!-- form start -->
          @Html.AntiForgeryToken()
          <form class="form-horizontal" method="post"
            action="/Admin/turedit/@ViewBag.TurInfo.Id">
            <input asp-for="Id" type="hidden" value="@ViewBag.TurInfo.Id" />
            <div class="card-body">
              <div class="form-group row">
                <label class="col-sm-2 col-form-label">Tür Adı</label>
                <div class="col-sm-10">
                  <input type="text" asp-for="TurAdi" class="form-control"
                    placeholder="Tür Adı"
                    value="@ViewBag.TurInfo.TurAdi" />
                </div>
                <span asp-validation-for="TurAdi" class="text-danger ml-2 mt-2"></span>
              </div>

            </div>
            <!-- /.card-body -->
            <div class="card-footer">
              <a href="/Admin/Turler" class="btn btn-primary">Vazgeç</a>
              <button type="submit" class="btn btn-warning float-right">
                Kaydet
              </button>
            </div>
            <!-- /.card-footer -->
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
